---
import heroVideo from '../assets/dental-hero.mp4';
import ReviewsCarousel from './ReviewsCarousel.astro';
import BookAppointment from './BookAppointment.astro';
import AboutUs from './AboutUs.astro';
---
<section class="relative min-h-[80vh] flex items-center bg-[#1FA198]">
  <div class="absolute inset-0 z-0">
    <video autoplay loop muted playsinline class="w-full h-full object-cover">
      <source src={heroVideo} type="video/mp4" />
    </video>
  </div>
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-white">
    <div class="max-w-3xl">
      <div class="bg-zinc-50/70 rounded-full p-8 text-center">
        <ReviewsCarousel />
      </div>
    </div>
  </div>
</section>

<BookAppointment />
<AboutUs />
<BookAppointment />
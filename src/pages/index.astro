---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
---

<Layout title="Welcome">
  <Hero />
  <Services />
  
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Why Choose Us?</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          We provide exceptional dental care using the latest technology and techniques,
          ensuring your comfort and satisfaction with every visit.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <h3 class="text-xl font-semibold mb-2">Experienced Team</h3>
          <p class="text-gray-600">Our dentists have over 20 years of combined experience.</p>
        </div>
        <div class="text-center">
          <h3 class="text-xl font-semibold mb-2">Modern Technology</h3>
          <p class="text-gray-600">State-of-the-art equipment for precise and comfortable care.</p>
        </div>
        <div class="text-center">
          <h3 class="text-xl font-semibold mb-2">Patient-First Approach</h3>
          <p class="text-gray-600">Personalized treatment plans tailored to your needs.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
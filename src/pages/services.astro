---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { services } from '../data/services';
---

<Layout title="Our Services">
  <div class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl font-bold text-center mb-12">Our Dental Services</h1>
      
      <div class="space-y-16">
        {services.map(service => (
          <div class="bg-white p-8 rounded-lg shadow-md">
            <div class="flex items-center mb-6">
              <span class="text-4xl mr-4">{service.icon}</span>
              <h2 class="text-2xl font-bold">{service.title}</h2>
            </div>
            <p class="text-gray-600 mb-6">{service.description}</p>
            <h3 class="text-lg font-semibold mb-4">What We Offer:</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-600">
              {service.details.map(detail => (
                <li>{detail}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>